+	devno = sysfs_partno_to_devno(&disk, partno);
+	if (!devno)
+		goto done;
+	if (sysfs_init(&part, devno, &disk))
+		goto done;
+	if (sysfs_read_u64(&part, "start", start))
+		goto done;
+
+	rc = 0;
